rem(px)
  return px/26rem
body
  background #f0f0f0

nav
  position relative
  width 100%
  height 2.25rem
  background-image: linear-gradient(#323232,#414141);
  a
    position absolute
    left .5rem
    float left
    width 2.25rem
    height 2.25rem
    background url(../images/icon_23.png) no-repeat center center
  span
    float left
    width 4rem
    height 2.25rem
    font-size .8rem
    color white
    text-align center
    line-height 2.25rem
    padding 0 4.5rem
  em
    position absolute
    right  .5rem
    z-index 1
    float right
    width 2.25rem
    height 2.25rem
    background url(../images/icon_24.png) no-repeat center center

.menuShadow
  width 100%
  height 2.25rem
  border-top  1px solid hsla(0,0%,100%,.5);
  background-image: linear-gradient(#323232,#414141);
  display none
  li
    float left
    box-sizing border-box
    width 25%
    height 100%
    padding 0.5rem 0
    a
      display block
      width rem(103)
      height 100%
      font-size .5rem
      text-align center
      color white
      margin 0 auto
    img
      display block
      margin 0 auto
section
  width 100%

.banner
  width 100%
  //float left
  background white
  img
   width 11.2rem
   //height 85%
   margin 0.75rem 2.4rem
  h2
   width 90%
   height 2.5rem
   font-size .7rem
   color white
   background #515150
   text-align center
   line-height 2.5rem
   padding 0 5%
  span
   display block
   width 90%
   font-size .7rem
   color #d0021b
   line-height 2.5rem
   padding 0 5%
   font-weight bold




.spinner
  border-top 1px solid #e0e0e0
  width 100%
  background-color white
  h1
    font-size .6rem
    padding .75rem .5rem .75rem .75rem
  span
    //float left
    height 100%
    width .6rem
    background-color #d0021b
    color white
  em
    float right
    width 1rem
    height 1rem
    background url(../images/icon_29.png) no-repeat center center
    transform rotate(0deg)


.shadow
  width 100%
  height 4rem
  //background #000000
  transform translateY(-2.5rem)
  .gray
    width 100%
    height 1rem
    background #f0f0f0
  .shadow_list
    width 100%
    height rem(39)
    padding .25rem 0
    background-color white
    font-size .7rem
    a
      float left
      width rem(208)
      height rem(37)
      color #b0b0b0
      text-align center
      box-sizing border-box
      line-height rem(37)
    :first-child
      border-right 1px solid #ccc
  .shadow_comment
    width 100%
    height rem(127)
    font-size .6rem
    border-top 1px solid #ccc
    background-color white
    p
      width 80%
      padding-top 1.5rem
      margin 0 auto

.shoplist_mune
  position fixed
  bottom 0
  width 90%
  height 1.5rem
  padding .5rem 5%
  background-color white
  border-top 1px solid #ccc
  :first-child
    float left
    width rem(64)
    height rem(38)
    background url(../images/icon_30.png) no-repeat center center
    margin-right .4rem
  :nth-child(2)
    float left
    width rem(64)
    height rem(38)
    background url(../images/icon_31.png) no-repeat center center
    margin-right .4rem
  .shoplist_mune_like
    float left
    width rem(64)
    height rem(38)
    background url(../images/icon_32.png) no-repeat center center
  .shoplist_mune_red
    background url(../images/icon_33.png) no-repeat center center
   :last-child
     float right
     margin-top -.2rem
     width 6rem
     height 1.8rem
     color white
     text-align center
     line-height 1.8rem
     font-size .7rem
     font-weight bold
     background-color #eb0313
#prompt
  display none
  position fixed
  top 35%
  left 20%
  width rem(220)
  height rem(80)
  border-radius rem(10)
  text-align center
  color white
  line-height rem(80)
  font-size rem(15)
  background-color rgba(0,0,0,.6)