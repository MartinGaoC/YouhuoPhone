rem(px)
  return px/26rem
body
  background #f0f0f0

nav
  position relative
  width 100%
  height 2.25rem
  background-image: linear-gradient(#323232,#414141);
  a
    position absolute
    left .5rem
    float left
    width 2.25rem
    height 2.25rem
    background url(../images/icon_23.png) no-repeat center center
  span
    float left
    width 4rem
    height 2.25rem
    font-size .8rem
    color white
    text-align center
    line-height 2.25rem
    padding 0 4.5rem
  em
    position absolute
    top .6rem
    right  .3rem
    z-index 1
    float right
    width 2.25rem
    height 2.25rem
    font-size .6rem
    color white




.gary
  width 95%
  height .5rem
  font-size .5rem
  color #b7b7b7
  padding 0.25rem 0 .25rem 5%
  background-color #f0f0f0

.shop
  width 100%
  height rem(200)
  background-color white
  margin-bottom .5rem

.shop_top
  width 85%
  //box-sizing border-box
  height 1rem
  padding .5rem 5% .5rem 10%
  background url(../images/icon_35.png)no-repeat center left
  background-position 2% 55%
  border-bottom 1px solid #f0f0f0
  font-size .8rem
  line-height 1rem
  color #dfdfdf
  span
    color black
    font-size .6rem
  em
    font-size .6rem
    color #d0021b
    margin-left 1rem
    margin-right .2rem


.shop_bottom
  width 100%
  height rem(160)
  position relative
.shop_photo
  float left
  width 6.5rem
  height 100%
  em
    width .8rem
    height .8rem
    float left
    margin 2.2rem .5rem
    border 1px solid black
    border-radius 50%
  img
    //float left
    width 3.8rem
    height 5rem
    margin-top .3rem
.shop_name
  display none
  position absolute
  right 15px
  top 30px
  width rem(240)
  height rem(102)
  em
    display block
    width 100%
    color black
    font-size .6rem
  span
    margin-top 1rem
    display block
    font-size .6rem
    color #d0021b

.shop_list
  position absolute
  right 15px
  top 30px
  width rem(240)
  height rem(102)
  em
    display block
    width 100%
    color #d0021b
    margin-top 3rem
    font-size .6rem

.shop_lists
  position relative
#listLeft
  box-sizing border-box
  float left
  width 1.5rem
  height 1.5rem
  font-size .7rem
  text-align center
  line-height 1.5rem
  border 1px solid #e0e0e0
#listText
  position absolute
  top -1px
  left  39px
  margin-top 1px
  box-sizing border-box
  float left
  width 2.5rem
  height 1.5rem
  font-size .7rem
  text-align center
  line-height 1.5rem
  border-top 1px solid #e0e0e0
  border-bottom 1px solid #e0e0e0
  border-left  none
  border-right none
  outline none

#listRight
  position absolute
  top 0px
  left 103px
  box-sizing border-box
  display inline-block
  width 1.5rem
  height 1.5rem
  font-size .7rem
  text-align center
  line-height 1.5rem
  border 1px solid #e0e0e0
.white
  width 100%
  height 3rem
  background-color white
.cart_menu
  position fixed
  bottom 0
  width 100%
  height 2.8rem
  background-color white
  border-top 1px solid #e0e0e0
.allselect
  float left
  width 2rem
  height 100%
  input
    visibility  hidden
  label
    position relative
    width .8rem
    height .8rem
    float left
    margin 40% 0 50% 15px
    border 1px solid black
    border-radius 50%
    span
      position absolute
      bottom -18px
      right -1px
      width 1rem
      font-size .5rem
.sum
  float right
  width rem(330)
  height 2rem
  padding .5rem .3rem
  em
    float right
    width 4rem
    height 2rem
    font-size .6rem
    font-weight bold
    background-color #d0021b
    text-align center
    line-height 2rem
    color white
  span
    float right
    font-size .7rem
    color #d0021b
    margin-top 0.3rem
    margin-right .3rem
  i
    float right
    font-style normal
    font-size .5rem
    margin-top 0
    margin-left 4.5rem
    margin-right .5rem
    color #6b6b6b