nav
  position relative
  width 100%
  height 2.25rem
  background-image: linear-gradient(#323232,#414141);
  a
    position absolute
    left .5rem
    float left
    width 2.25rem
    height 2.25rem
    background url(../images/icon_23.png) no-repeat center center
  span
    float left
    width 4rem
    height 2.25rem
    font-size .8rem
    color white
    text-align center
    line-height 2.25rem
    padding 0 4.5rem
